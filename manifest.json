{
    "name": "Piped Redirects",
    "version": "1.3",
    "description": "Redirects YouTube links to Piped",
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://youtu.be/*",
        "*://*.youtube.com/*",
        "*://*.youtube-nocookie.com/*",
        "<all_urls>"
    ],
    "icons": {
        "48": "img/logo-48.png",
        "96": "img/logo-96.png",
        "128": "img/logo-128.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup/popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{ff281d7e-7973-425c-b071-7de97dc9803d}"
        }
    },
    "manifest_version": 2
}
